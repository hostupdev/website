---
import ActionButton from "@components/action_button.astro";
import CommandBox from "@components/command_box.astro";
import CopyButton from "@components/copy_button.astro";
import { GIT_URLS } from "@constants";
import MainLayout from "@layouts/main.astro";
---

<MainLayout title="Hostup - Private Software Hosting">
  <!-- Hero Section -->
  <section
    id="hero"
    class="flex min-h-screen flex-col items-center justify-center px-6 py-12 sm:py-24"
  >
    <div class="text-center space-y-4 sm:space-y-6 max-w-xl sm:max-w-5xl mb-12 sm:mb-24">
      <h1 class="text-hero text-gradient">
        Private Software Hosting
      </h1>
      <p
        class="text-hero-sub text-on-background/60 max-w-xs sm:max-w-xl mx-auto"
      >
        Deploy cloud storage, password managers, media servers, and many more tools on your own infrastructure. Full control, no expertise required.
      </p>
    </div>

    <!-- Terminal with Strong CTA -->
    <div class="w-full max-w-sm sm:max-w-md mx-auto">
      <div class="relative">
        <!-- Simplified Terminal -->
        <!-- Terminal Window with Tabs -->
        <div class="bg-surface border border-primary/20 rounded-lg shadow-outer-lg backdrop-blur-sm overflow-hidden">
          <!-- Terminal Header with Tabs -->
          <div class="flex items-center bg-surface-variant/20 border-b border-primary/10">
            <div class="flex space-x-1.5 px-3 py-2">
              <div class="w-3 h-3 rounded-full bg-red-500/60 hover:bg-red-500/80 transition-colors"></div>
              <div class="w-3 h-3 rounded-full bg-yellow-500/60 hover:bg-yellow-500/80 transition-colors"></div>
              <div class="w-3 h-3 rounded-full bg-green-500/60 hover:bg-green-500/80 transition-colors"></div>
            </div>
            <div class="flex flex-1 -mb-px ml-2">
              <div class="px-3 py-2 text-xs font-mono border-b-2 border-primary bg-surface/50 text-primary">
                terminal
              </div>
              <a href="/docs" class="px-3 py-2 text-xs font-mono border-b-2 border-transparent hover:border-primary/30 text-on-surface/60 hover:text-on-surface transition-colors">
                docs
              </a>
              <a href="/services" class="px-3 py-2 text-xs font-mono border-b-2 border-transparent hover:border-primary/30 text-on-surface/60 hover:text-on-surface transition-colors">
                services
              </a>
            </div>
          </div>
          
          <!-- Terminal Content -->
          <div class="p-4 sm:p-5">
            <div class="bg-background/50 rounded border border-surface-variant/30 p-4 font-mono text-sm">
              <div class="space-y-2">
                <div class="flex items-center justify-between">
                  <div class="flex items-center text-on-surface/80">
                    <span class="text-accent mr-2">$</span>
                    <span>ssh hostup.sh</span>
                    <span class="inline-block w-2 h-4 bg-primary ml-1 animate-blink"></span>
                  </div>
                  <CopyButton text="ssh hostup.sh" size="lg" />
                </div>
                	<div class="flex items-center space-x-2 text-xs">
		              	<div class="flex items-center space-x-1 bg-surface-variant/40 text-on-surface/60 px-2 py-1 rounded-full border border-surface-variant/30">
		            		<div class="w-2 h-2 bg-accent-variant rounded-full animate-pulse"></div>
		              		<span class="whitespace-nowrap">Coming&nbsp;Soon</span>
	                	</div>
		            	<span class="text-on-surface/50">Not yet available</span>
            		</div>
              </div>
            </div>
          </div>
        </div>
        
        <!-- CTA Section -->
        <div class="mt-8 space-y-4">
          <ActionButton href="/docs" variant="gradient" size="lg" enableScale class="w-full text-base font-semibold shadow-lg">
            Start Now ‚Üí
          </ActionButton>
          
          <div class="text-center space-y-2">
            <p class="text-on-background/50 text-sm">
              No downloads ‚Ä¢ No setup ‚Ä¢ Try it instantly
            </p>
            <ActionButton href="#why-hostup" variant="ghost" size="sm" class="text-xs text-primary hover:text-primary/80">
              Learn more ‚Üì
            </ActionButton>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- Benefits Section -->
  <section id="why-hostup" class="py-14 sm:py-20 bg-gradient-to-b from-surface-variant/25 to-surface/40 dark:from-surface-variant/10 dark:to-surface/25">
    <div class="max-w-2xl sm:max-w-6xl mx-auto">
      <div class="text-center mb-10 sm:mb-16">
        <h2 class="text-title text-on-surface mb-4">
          Why Choose Hostup?
        </h2>
        <p class="text-body text-on-surface/70 max-w-xs sm:max-w-2xl mx-auto">
          The simplest path to private software hosting for beginners, with the power and flexibility experts demand.
        </p>
      </div>

      <div class="grid grid-cols-1 lg:grid-cols-3 px-6 gap-y-8 gap-x-4 lg:gap-8 place-items-center items-stretch">
        <!-- Simple Setup -->
        <div class="bg-surface border border-primary/20 dark:border-primary/10 rounded-lg p-6 max-w-lg shadow-outer-md hover:shadow-outer-lg transition-all flex flex-col">
          <div class="text-primary mb-4">
            <!-- Simple Setup Icon -->
            <svg class="w-8 h-8" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 10V3L4 14h7v7l9-11h-7z"></path>
            </svg>
          </div>
          <div class="flex items-center mb-2">
            <h3 class="text-heading font-semibold">Simple Step-by-Step Setup</h3>
          </div>
          <p class="text-body text-on-surface/70 mb-6 flex-grow">
            Hostup's guided setup asks simple questions and automatically handles complex configurations, container orchestration, and dependencies.
          </p>
          <div class="text-caption font-mono text-primary bg-background/70 dark:bg-background/50 rounded p-2 mt-auto">
            Guided questions ¬∑ Automatic config ¬∑ For all skill levels
          </div>
        </div>

        <!-- Works on Any Computer -->
        <div class="bg-surface border border-accent/20 dark:border-accent/10 rounded-lg p-6 max-w-lg shadow-outer-md hover:shadow-outer-lg transition-all flex flex-col">
          <div class="text-accent mb-4">
            <!-- Computer Icon -->
            <svg class="w-8 h-8" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <rect x="4" y="3" width="16" height="11" rx="1" stroke-width="2"></rect>
              <path d="M4 14h16" stroke-width="2"></path>
              <path d="M8 21h8" stroke-width="2"></path>
              <path d="M12 17v4" stroke-width="2"></path>
            </svg>
          </div>
          <div class="flex items-center mb-2">
            <h3 class="text-heading font-semibold">Works on Any Computer</h3>
          </div>
          <p class="text-body text-on-surface/70 mb-6 flex-grow">
            Deploy on your own hardware (laptops, mini PCs, Raspberry Pi). Supports Windows, Mac, Linux with seamless container runtime integrations.
          </p>
          <div class="text-caption font-mono text-accent bg-background/70 dark:bg-background/50 rounded p-2 mt-auto">
            Any device ¬∑ Any OS ¬∑ Container-ready
          </div>
        </div>

        <!-- Tons of Apps -->
        <div class="bg-surface border border-secondary/20 dark:border-secondary/10 rounded-lg p-6 max-w-lg shadow-outer-md hover:shadow-outer-lg transition-all flex flex-col">
          <div class="text-secondary mb-4">
            <!-- Apps Grid Icon -->
            <svg class="w-8 h-8" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <rect x="3" y="3" width="7" height="7" stroke-width="2"></rect>
              <rect x="14" y="3" width="7" height="7" stroke-width="2"></rect>
              <rect x="3" y="14" width="7" height="7" stroke-width="2"></rect>
              <rect x="14" y="14" width="7" height="7" stroke-width="2"></rect>
            </svg>
          </div>
          <div class="flex items-center mb-2">
            <h3 class="text-heading font-semibold">Tons of Software Ready to Go</h3>
          </div>
          <p class="text-body text-on-surface/70 mb-6 flex-grow">
            Choose from a growing library of pre-configured, containerized services like password managers and media servers. Easy for beginners, with advanced customization options for power users.
          </p>
          <div class="text-caption font-mono text-secondary bg-background/70 dark:bg-background/50 rounded p-2 mt-auto">
            Pre-tested containers ¬∑ Customizable ¬∑ Always expanding
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- How It Works: Vertical Timeline -->
  <section class="py-14 px-6 sm:py-20">
      <div class="text-center mb-10 sm:mb-16">
        <h2 class="text-title text-on-background mb-4">
          How It Works
        </h2>
        <p class="text-body text-on-background/70">
          From zero to running your own private software in just a few minutes
