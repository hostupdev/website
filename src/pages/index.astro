---
import ActionButton from "@components/action_button.astro";
import CopyButton from "@components/copy_button.astro";
import { GIT_URLS } from "@constants";
import MainLayout from "@layouts/main.astro";
---

<MainLayout title="Hostup - Bootstrap Self-Hosted Services">
  <!-- Hero Section -->
  <section
    id="hero"
    class="flex min-h-screen flex-col items-center justify-center space-y-10 px-4 sm:space-y-12 sm:px-6 sm:py-24 md:space-y-16 md:py-32"
  >
    <div class="text-center space-y-6 max-w-2xl sm:max-w-4xl">
      <h1
        class="text-5xl leading-tight font-semibold sm:text-6xl lg:text-7xl bg-gradient-to-r from-primary to-accent bg-clip-text text-transparent"
      >
        Bootstrap Self-Hosted Services
      </h1>
      <p
        class="text-on-background/60 max-w-xs sm:max-w-2xl mx-auto text-sm sm:text-lg leading-normal font-normal"
      >
        Quickly deploy and manage self-hosted services. A simple, opinionated 
        framework designed for beginners and pros alike.
      </p>
    </div>

    <!-- Command Box -->
    <div class="w-full max-w-xs sm:max-w-md mx-auto mt-4">
      <div class="bg-surface border border-primary/20 rounded-lg p-4 sm:p-6 shadow-outer-lg backdrop-blur-sm">
        <div class="flex items-center justify-between mb-4">
          <span class="text-on-surface/60 text-sm font-mono">Get Started</span>
          <div class="flex space-x-1">
            <div class="w-3 h-3 rounded-full bg-accent-variant/60"></div>
            <div class="w-3 h-3 rounded-full bg-secondary/60"></div>
            <div class="w-3 h-3 rounded-full bg-primary/60"></div>
          </div>
        </div>
        <div class="flex items-center space-x-3 bg-background/50 rounded-md p-3 border border-surface-variant/30">
          <span class="text-accent text-sm">$</span>
          <code class="flex-1 font-mono text-on-surface select-all">ssh hostup.sh</code>
          <CopyButton text="ssh hostup.sh" />
        </div>
        <p class="text-on-surface/50 text-xs mt-2 text-center">Run this command in your terminal</p>
      </div>
    </div>

    <div class="flex flex-col sm:flex-row gap-3 w-full max-w-xs sm:max-w-none justify-center items-center mt-6 sm:mt-4">
      <ActionButton href="/docs" variant="gradient" size="md" enableScale class="w-full sm:w-auto px-4 py-2 text-base sm:text-lg">
        Get Started
      </ActionButton>
      <ActionButton href="#features" variant="outline" size="md" enableScale class="w-full sm:w-auto px-4 py-2 text-base sm:text-lg">
        Explore Features 
      </ActionButton>
    </div>
  </section>

  <!-- Features Section -->
  <section id="features" class="py-14 px-4 sm:py-20 sm:px-6 bg-gradient-to-b from-surface-variant/25 to-surface/40 dark:from-surface-variant/10 dark:to-surface/25">
    <div class="max-w-2xl sm:max-w-6xl mx-auto">
      <div class="text-center mb-10 sm:mb-16">
        <h2 class="text-2xl sm:text-4xl font-semibold text-on-surface mb-4">
          Three Core Components
        </h2>
        <p class="text-on-surface/70 text-base sm:text-lg max-w-xs sm:max-w-2xl mx-auto">
          Hostup provides everything you need to self-host services with confidence
        </p>
      </div>

      <div class="grid grid-cols-1 md:grid-cols-3 gap-y-8 gap-x-4 md:gap-8">
        <!-- Services -->
        <div class="bg-surface border border-primary/20 dark:border-primary/10 rounded-lg p-4 sm:p-6 px-4 sm:px-6 shadow-outer-md hover:shadow-outer-lg transition-all flex flex-col min-h-[320px]">
          <div class="text-primary mb-4">
            <svg class="w-8 h-8" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 11H5m14 0a2 2 0 012 2v6a2 2 0 01-2 2H5a2 2 0 01-2-2v-6a2 2 0 012-2m14 0V9a2 2 0 00-2-2M5 11V9a2 2 0 012-2m0 0V5a2 2 0 012-2h6a2 2 0 012 2v2M7 7h10"></path>
            </svg>
          </div>
          <h3 class="text-xl font-semibold text-on-surface mb-3">Ready-to-Deploy Apps</h3>
          <p class="text-on-surface/70 text-sm leading-relaxed mb-2 flex-grow">
            Choose from popular self-hosted applications like Nextcloud, Vaultwarden, Jellyfin, and more. 
            Each comes with sensible defaults and ready to run in minutes.
          </p>
          <div class="text-xs font-mono text-accent bg-background/70 dark:bg-background/50 rounded p-2 mt-auto">
           Nextcloud · Vaultwarden · Jellyfin · Home Assistant · Etc.
          </div>
        </div>

        <!-- CLI -->
        <div class="bg-surface border border-accent/20 dark:border-accent/10 rounded-lg p-4 sm:p-6 px-4 sm:px-6 shadow-outer-md hover:shadow-outer-lg transition-all flex flex-col min-h-[320px]">
          <div class="text-accent mb-4">
            <svg class="w-8 h-8" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 3v2m6-2v2M9 19v2m6-2v2M5 9H3m2 6H3m18-6h-2m2 6h-2M7 19h10a2 2 0 002-2V7a2 2 0 00-2-2H7a2 2 0 00-2 2v10a2 2 0 002 2zM9 9h6v6H9V9z"></path>
            </svg>
          </div>
          <h3 class="text-xl font-semibold text-on-surface mb-3">Powerful Yet Simple</h3>
          <p class="text-on-surface/70 text-sm leading-relaxed mb-2 flex-grow">
            Interactive terminal interface that guides you through every step. No complex configs 
            or YAML wrestling—just straightforward commands that work.
          </p>
          <div class="text-xs font-mono text-accent bg-background/70 dark:bg-background/50 rounded p-2 mt-auto">
            Interactive configuration · Smart defaults · Zero hassle
          </div>
        </div>

        <!-- Open Source -->
        <div class="bg-surface border border-secondary/20 dark:border-secondary/10 rounded-lg p-4 sm:p-6 px-4 sm:px-6 shadow-outer-md hover:shadow-outer-lg transition-all flex flex-col min-h-[320px]">
          <div class="text-secondary mb-4">
            <svg class="w-8 h-8" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4.318 6.318a4.5 4.5 0 000 6.364L12 20.364l7.682-7.682a4.5 4.5 0 00-6.364-6.364L12 7.636l-1.318-1.318a4.5 4.5 0 00-6.364 0z"></path>
            </svg>
          </div>
          <h3 class="text-xl font-semibold text-on-surface mb-3">Community-Driven</h3>
          <p class="text-on-surface/70 text-sm leading-relaxed mb-2 flex-grow">
            Open source! Contribute services, report issues, 
            or fork the project. Your infrastructure, your control.
          </p>
          <div class="text-xs font-mono text-secondary bg-background/70 dark:bg-background/50 rounded p-2 mt-auto">
            Permissive License · GitHub · Community Registry
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- How It Works -->
  <section class="py-14 px-4 sm:py-20 sm:px-6">
    <div class="max-w-2xl sm:max-w-4xl mx-auto">
      <div class="text-center mb-10 sm:mb-16">
        <h2 class="text-2xl sm:text-4xl font-semibold text-on-background mb-4">
          How It Works
        </h2>
        <p class="text-on-background/70 text-base sm:text-lg">
          From zero to self-hosted in minutes
        </p>
      </div>

      <div class="space-y-10 sm:space-y-8">
        <div class="flex flex-col sm:flex-row items-start gap-4 sm:space-x-6">
          <div class="flex-shrink-0 w-8 h-8 bg-primary text-on-primary rounded-full flex items-center justify-center font-semibold text-sm mb-2 sm:mb-0">
            1
          </div>
          <div>
            <h3 class="text-lg sm:text-xl font-semibold text-on-background mb-2">Initialize Project</h3>
            <p class="text-on-background/70 mb-3 text-sm sm:text-base">
              Run <code class="bg-surface px-2 py-1 rounded font-mono text-xs sm:text-sm">hostup init</code> 
              to launch an interactive TUI that guides you through project setup and service selection.
            </p>
            <div class="bg-surface/80 border border-surface-variant/30 rounded-lg p-3 sm:p-4 font-mono text-xs sm:text-sm">
              <div class="text-accent">$ hostup init</div>
              <div class="text-on-surface/60">→ Launching interactive setup...</div>
              <div class="text-on-surface/60">→ Configure project settings</div>
              <div class="text-on-surface/60">→ Select services to deploy</div>
            </div>
          </div>
        </div>

        <div class="flex flex-col sm:flex-row items-start gap-4 sm:space-x-6">
          <div class="flex-shrink-0 w-8 h-8 bg-accent text-on-accent rounded-full flex items-center justify-center font-semibold text-sm mb-2 sm:mb-0">
            2
          </div>
          <div>
            <h3 class="text-lg sm:text-xl font-semibold text-on-background mb-2">Configure Services</h3>
            <p class="text-on-background/70 mb-3 text-sm sm:text-base">
              Templates are compiled with your configuration to generate deployment-ready Docker Compose files.
            </p>
            <div class="bg-surface/80 border border-surface-variant/30 rounded-lg p-4 sm:p-6">
              <!-- Input Files -->
              <div class="grid grid-cols-1 md:grid-cols-3 gap-4 mb-6">
                <div class="flex items-center space-x-2 bg-background/60 rounded-lg p-3 border border-secondary/20">
                  <div class="flex-shrink-0">
                    <svg class="w-5 h-5 text-secondary" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"></path>
                    </svg>
                  </div>
                  <div class="min-w-0 flex-1">
                    <div class="text-xs font-mono text-secondary font-semibold">compose.template.yml</div>
                    <div class="text-xs text-on-surface/60">Service blueprint</div>
                  </div>
                </div>
                
                <div class="flex items-center space-x-2 bg-background/60 rounded-lg p-3 border border-accent-variant/20">
                  <div class="flex-shrink-0">
                    <svg class="w-5 h-5 text-accent-variant" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"></path>
                    </svg>
                  </div>
                  <div class="min-w-0 flex-1">
                    <div class="text-xs font-mono text-accent-variant font-semibold">.env.template</div>
                    <div class="text-xs text-on-surface/60">Default values</div>
                  </div>
                </div>
                
                <div class="flex items-center space-x-2 bg-background/60 rounded-lg p-3 border border-accent/20">
                  <div class="flex-shrink-0">
                    <svg class="w-5 h-5 text-accent" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10.325 4.317c.426-1.756 2.924-1.756 3.35 0a1.724 1.724 0 002.573 1.066c1.543-.94 3.31.826 2.37 2.37a1.724 1.724 0 001.065 2.572c1.756.426 1.756 2.924 0 3.35a1.724 1.724 0 00-1.066 2.573c.94 1.543-.826 3.31-2.37 2.37a1.724 1.724 0 00-2.572 1.065c-.426 1.756-2.924 1.756-3.35 0a1.724 1.724 0 00-2.573-1.066c-1.543.94-3.31-.826-2.37-2.37a1.724 1.724 0 00-1.065-2.572c-1.756-.426-1.756-2.924 0-3.35a1.724 1.724 0 001.066-2.573c-.94-1.543.826-3.31 2.37-2.37.996.608 2.296.07 2.572-1.065z"></path>
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z"></path>
                    </svg>
                  </div>
                  <div class="min-w-0 flex-1">
                    <div class="text-xs font-mono text-accent font-semibold">service.yml</div>
                    <div class="text-xs text-on-surface/60">Configuration handler</div>
                  </div>
                </div>
              </div>
              
              <!-- Compilation Arrow -->
              <div class="flex items-center justify-center mb-6">
                <div class="flex items-center space-x-3">
                  <div class="w-8 h-0.5 bg-gradient-to-r from-secondary via-accent-variant to-accent rounded-full"></div>
                  <div class="bg-primary text-on-primary rounded-full p-2">
                    <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 10V3L4 14h7v7l9-11h-7z"></path>
                    </svg>
                  </div>
                  <div class="w-8 h-0.5 bg-gradient-to-r from-accent to-primary rounded-full"></div>
                </div>
              </div>
              
              <!-- Output Files -->
              <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
                <div class="flex items-center space-x-3 bg-primary/10 rounded-lg p-4 border border-primary/30">
                  <div class="flex-shrink-0">
                    <div class="w-8 h-8 bg-primary text-on-primary rounded-lg flex items-center justify-center">
                      <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"></path>
                      </svg>
                    </div>
                  </div>
                  <div class="min-w-0 flex-1">
                    <div class="text-sm font-mono text-primary font-semibold">compose.yml</div>
                    <div class="text-xs text-on-surface/70">Ready to deploy</div>
                  </div>
                  <div class="flex-shrink-0">
                    <svg class="w-4 h-4 text-primary" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path>
                    </svg>
                  </div>
                </div>
                
                <div class="flex items-center space-x-3 bg-primary/10 rounded-lg p-4 border border-primary/30">
                  <div class="flex-shrink-0">
                    <div class="w-8 h-8 bg-primary text-on-primary rounded-lg flex items-center justify-center">
                      <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"></path>
                      </svg>
                    </div>
                  </div>
                  <div class="min-w-0 flex-1">
                    <div class="text-sm font-mono text-primary font-semibold">.env</div>
                    <div class="text-xs text-on-surface/70">Your settings</div>
                  </div>
                  <div class="flex-shrink-0">
                    <svg class="w-4 h-4 text-primary" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path>
                    </svg>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>

        <div class="flex flex-col sm:flex-row items-start gap-4 sm:space-x-6">
          <div class="flex-shrink-0 w-8 h-8 bg-secondary text-on-secondary rounded-full flex items-center justify-center font-semibold text-sm mb-2 sm:mb-0">
            3
          </div>
          <div>
            <h3 class="text-lg sm:text-xl font-semibold text-on-background mb-2">Deploy & Manage</h3>
            <p class="text-on-background/70 mb-3 text-sm sm:text-base">
              Start, stop, add, remove, and configure services with simple commands.
            </p>
            <div class="bg-surface/80 border border-surface-variant/30 rounded-lg p-3 sm:p-4 font-mono text-xs sm:text-sm space-y-1">
              <div class="text-primary">$ hostup start --all</div>
              <div class="text-accent">$ hostup add traefik</div>
              <div class="text-secondary">$ hostup edit postgres</div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- CTA Section -->
  <section class="py-14 px-2 sm:py-20 sm:px-6 bg-gradient-to-r from-surface-variant/40 via-primary/20 to-accent/25 dark:from-surface-variant/15 dark:via-primary/8 dark:to-accent/12">
    <div class="max-w-2xl sm:max-w-3xl mx-auto text-center">
      <h2 class="text-2xl sm:text-4xl font-semibold text-on-background mb-6">
        Ready to Self-Host?
      </h2>
      <p class="text-on-background/70 text-base sm:text-lg mb-8">
        Join the community of developers taking control of their infrastructure
      </p>
      <div class="flex flex-col sm:flex-row gap-4 justify-center">
        <ActionButton href="/docs" size="lg" variant="primary" enableScale>
          Get Started
        </ActionButton>
        <ActionButton href={GIT_URLS.ROOT} size="lg" enableScale>
          View on GitHub
        </ActionButton>
      </div>
    </div>
  </section>
</MainLayout>


