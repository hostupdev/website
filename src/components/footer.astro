---
import { Image } from "astro:assets";
import CopyButton from "@components/copy_button.astro";
import { GIT_URLS, VERSIONS } from "@constants";
import hostupLogoDark from "public/images/hostup-logo-dark.png";
import hostupLogoLight from "public/images/hostup-logo-light.png";

const date = new Date();
---

<footer class="bg-surface border-t border-surface-variant/30 mt-auto">
  <div class="max-w-6xl mx-auto px-6 py-12">
    <!-- Main Footer Content -->
    <div class="grid grid-cols-1 md:grid-cols-4 gap-8 mb-8">
      
      <!-- Brand Section -->
      <div class="md:col-span-2">
        <!-- Logo -->
        <div class="flex items-center space-x-2 mb-4">
          <div class="relative">
            <div class="w-8 h-8 bg-gradient-to-br from-primary to-accent rounded-lg flex items-center justify-center">
              <Image src={hostupLogoDark} alt="Hostup Logo" loading="eager" class="select-none dark:block hidden" />
              <Image src={hostupLogoLight} alt="Hostup Logo" loading="eager" class="select-none dark:hidden" />
            </div>
            <div class="absolute -top-1 -right-1 w-3 h-3 bg-accent-variant rounded-full opacity-75"></div>
          </div>
          <h3 class="text-xl font-bold bg-gradient-to-r from-primary to-accent bg-clip-text text-transparent">
            Hostup
          </h3>
        </div>
        
        <!-- Description -->
        <p class="text-body text-on-surface/70 mb-6 max-w-md">
          Bootstrap self-hosted services with confidence. A simple, opinionated framework 
          designed for beginners and pros alike.
        </p>
        
        <!-- Command Box -->
        <div class="bg-background/50 border border-surface-variant/30 rounded-lg p-4 max-w-sm">
          <div class="flex items-center space-x-3">
            <span class="text-accent text-sm">$</span>
            <code class="flex-1 font-mono text-on-surface text-sm">ssh hostup.sh</code>
            <CopyButton text="ssh hostup.sh" size="sm" />
          </div>
        </div>
      </div>
      
      <!-- Navigation Links -->
      <div class="text-body">
        <h4 class="text-on-surface font-semibold mb-4">Resources</h4>
        <ul class="space-y-3">
          <li>
            <a href="/docs" class="text-on-surface/70 hover:text-primary transition-colors">
              Documentation
            </a>
          </li>
          <li>
            <a href="/services" class="text-on-surface/70 hover:text-primary transition-colors">
              Services
            </a>
          </li>
          <li>
            <a href="/guides" class="text-on-surface/70 hover:text-primary transition-colors">
              Guides
            </a>
          </li>
        </ul>
      </div>
      
      <!-- Community Links -->
      <div class="text-body">
        <h4 class="text-on-surface font-semibold mb-4">Community</h4>
        <ul class="space-y-3">
          <li>
            <a 
              href={GIT_URLS.ROOT}
              target="_blank" 
              rel="noopener noreferrer"
              class="text-on-surface/70 hover:text-accent transition-colors flex items-center space-x-2"
            >
              <span>GitHub</span>
              <svg class="w-3 h-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 6H6a2 2 0 00-2 2v10a2 2 0 002 2h10a2 2 0 002-2v-4M14 4h6m0 0v6m0-6L10 14"></path>
              </svg>
            </a>
          </li>
          <li>
            <a 
              href={`${GIT_URLS.HOSTUP_CLI}/discussions`} 
              target="_blank" 
              rel="noopener noreferrer"
              class="text-on-surface/70 hover:text-accent transition-colors flex items-center space-x-2"
            >
              <span>Discussions</span>
              <svg class="w-3 h-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 6H6a2 2 0 00-2 2v10a2 2 0 002 2h10a2 2 0 002-2v-4M14 4h6m0 0v6m0-6L10 14"></path>
              </svg>
            </a>
          </li>
          <li>
            <a 
              href={`${GIT_URLS.HOSTUP_CLI}/issues`} 
              target="_blank" 
              rel="noopener noreferrer"
              class="text-on-surface/70 hover:text-accent transition-colors flex items-center space-x-2"
            >
              <span>Issues</span>
              <svg class="w-3 h-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 6H6a2 2 0 00-2 2v10a2 2 0 002 2h10a2 2 0 002-2v-4M14 4h6m0 0v6m0-6L10 14"></path>
              </svg>
            </a>
          </li>
        </ul>
      </div>
    </div>
    
    <!-- Bottom Bar -->
    <div class="pt-8 border-t border-surface-variant/30">
      <div class="flex flex-col sm:flex-row justify-between items-center space-y-4 sm:space-y-0">
        <!-- Copyright -->
        <div class="flex items-center space-x-4 text-caption text-on-surface/60">
          <span>© {date.getFullYear()} Hostup</span>
          <span class="hidden sm:inline">•</span>
          <a href="/docs/license" class="hover:text-primary transition-colors">
            License
          </a>
          <span class="hidden sm:inline">•</span>
          <a href="/docs/privacy" class="hover:text-primary transition-colors">
            Privacy
          </a>
        </div>
        
        <!-- Status & Version -->
        <div class="flex items-center space-x-4 text-caption">
          <div class="flex items-center space-x-2">
            <div class="w-2 h-2 bg-primary rounded-full animate-pulse"></div>
            <span class="text-on-surface/60">All systems operational</span>
          </div>
          <span class="text-on-surface/40">v{VERSIONS.HOSTUP_CLI}</span>
        </div>
      </div>
    </div>
  </div>
</footer>
