{
	"extends": "astro/tsconfigs/strict",
	"include": [".astro/types.d.ts", "**/*"],
	"exclude": ["dist"],
	"compilerOptions": {
		"strictNullChecks": true,
		"allowJs": true,
		"jsx": "preserve",
		"baseUrl": ".",
		"paths": {
			"@constants": ["src/constants"],
			"@layouts/*": ["src/layouts/*"],
			"@components/*": ["src/components/*"],
			"@styles/*": ["src/styles/*"],
			"@utilities/*": ["src/utilities/*"],
			"@pages/*": ["src/pages/*"]
		}
	}
}
